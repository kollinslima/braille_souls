<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sumi.brailler">

    <uses-permission
        android:name="android.permission.GET_ACCOUNTS"
        android:maxSdkVersion="22" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/myFullscreenTheme">
        <activity
            android:name=".MainMenu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameSelector"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.LearnGame"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tutorial.LearnGameTutorial"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.MultiplayerGame"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.SinglePlayerGame"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user_profile.UserProfileActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".translate.Translator" />
        <activity
            android:name=".translate.TranslatorActivity"
            android:label="@string/title_activity_translator"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>