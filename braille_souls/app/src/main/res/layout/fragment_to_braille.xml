<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Space
        android:id="@+id/tradutorParaBrailleEspaco1"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <EditText
        android:id="@+id/tradutorCampoParaBraille"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tradutorParaBrailleEspaco1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="@string/translator_to_braille_hint"
        android:textSize="30sp"
        android:background="#e9e9e9"
        android:textCursorDrawable="@drawable/mypipe"/>

    <Button
        android:id="@+id/buttonTraduzir"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tradutorCampoParaBraille"
        android:text="@string/translator_button" />
    <ListView
        android:id="@+id/tradutorListView"
        android:layout_below="@id/buttonTraduzir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</RelativeLayout>