<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnFacil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dificuldade_facil" />

        <Button
            android:id="@+id/btnMedio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dificuldade_medio" />

        <Button
            android:id="@+id/btnDificil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dificuldade_dificil" />


        <CheckBox
            android:id="@+id/chbDificuldadeProgressiva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/black"
            android:text="@string/dificuldade_progressiva"/>

    </LinearLayout>


</LinearLayout>
